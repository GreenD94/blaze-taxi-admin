files:
  "/etc/httpd/conf.d/laravel.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      <VirtualHost *:80>
        DocumentRoot /var/app/current/public
        <Directory /var/app/current/public>
          AllowOverride All
          Require all granted
        </Directory>
        
        # Logs
        ErrorLog /var/log/httpd/laravel_error.log
        CustomLog /var/log/httpd/laravel_access.log combined
      </VirtualHost>

commands:
  01_reload_apache:
    command: "service httpd reload || service httpd restart"
    ignoreErrors: true
